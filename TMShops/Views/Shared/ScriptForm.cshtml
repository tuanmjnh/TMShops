@Scripts.Render("~/bundles/jqueryval")
@{
    var ValueSetting = GymManager.Controllers.BaseController.Value(VinaphoneCommon.Auth.id().ToString(), VinaphoneCommon.Setting.sub_key.form_use_label);
}
<script>
    $(function () {
        //
        $('.form-horizontal').TMSupportInput({ tooltip: true });

        //
        if(@(ValueSetting!=null? ValueSetting:"0")==@VinaphoneCommon.Setting.value.no.ToString())
            $('.setting-label').each(function(){
                $(this).removeClass('show').next().addClass('col-md-offset-1');
        })
        else
            $('.control-label').each(function(){
                $(this).addClass('show');
            })
    })
</script>